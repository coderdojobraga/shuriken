{
  "plugins": ["import", "react"],
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jsx-a11y/recommended",
    "plugin:prettier/recommended",
    "plugin:react-hooks/recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "alias": {
        "map": [
          ["~/styles", "./styles"],
          ["~/components", "./components"],
          ["~/layouts", "./components/layouts"],
          ["~/lib", "./lib"]
        ],
        "extensions": [".js"]
      }
    }
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "import/first": "error",
    "no-console": "warn",
    "no-eval": "error",
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0
  }
}
